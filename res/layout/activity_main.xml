
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android1="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android1:orientation="vertical"
        tools:context=".MainActivity"
        tools:ignore="HardcodedText" >

        <TableRow
            android1:id="@+id/tableRow1"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content" >

            <TextView
                android1:id="@+id/textView7"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:text="Gender"
                android1:textAppearance="?android:attr/textAppearanceMedium" />

            <RadioGroup
                android1:id="@+id/radioGroup1"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:orientation="horizontal" >

                <RadioButton
                    android1:id="@+id/radioFemale"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android1:checked="true"
                    android1:text="@string/female" />

                <RadioButton
                    android1:id="@+id/radioMale"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android1:text="Male" />
            </RadioGroup>
        </TableRow>

        <TableRow
            android1:id="@+id/tableRow2"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content" >

            <TextView
                android1:id="@+id/textView2"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:text="Heigth"
                android1:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android1:id="@+id/editHeigth"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:ems="10"
                android1:inputType="numberSigned" >

                <requestFocus />
            </EditText>

        </TableRow>

        <TableRow
            android1:id="@+id/tableRow3"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content" >

            <TextView
                android1:id="@+id/textView1"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:text="Weigth"
                android1:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android1:id="@+id/editWeigth"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:ems="10"
                android1:inputType="numberDecimal" />

        </TableRow>

        <TableRow
            android1:id="@+id/tableRow4"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content" >

            <TextView
                android1:id="@+id/textView3"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:text="Age"
                android1:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android1:id="@+id/editAge"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:ems="10"
                android1:inputType="number" />

        </TableRow>

        <TableRow
            android1:id="@+id/tableRow8"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content" >

            <TextView
                android1:id="@+id/textView6"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:text="Activity lvl."
                android1:textAppearance="?android:attr/textAppearanceMedium" />

            <SeekBar
                android1:id="@+id/seekBarActivityLvl"
                android1:layout_width="match_parent"
                android1:layout_height="wrap_content"
                android1:max="4" />

        </TableRow>

        <TableRow
            android1:id="@+id/tableRow7"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content" >
        </TableRow>

        <TableRow
            android1:id="@+id/tableRow5"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content" >

            <TextView
                android1:id="@+id/textView4"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:text="BMR"
                android1:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android1:id="@+id/textResult"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:text=""
                android1:textAppearance="?android:attr/textAppearanceLarge" />

        </TableRow>

        <TableRow
            android1:id="@+id/tableRow6"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content" >

            <TextView
                android1:id="@+id/textView5"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:text="Calorie req."
                android1:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android1:id="@+id/textCalorieReq"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:text=""
                android1:textAppearance="?android:attr/textAppearanceLarge" />

        </TableRow>

    </TableLayout>